<div class="hero-unit">
	<h1>Get your code reviewed!</h1><br /><br />
	<div class="row">
  		<div class="span4">
  			<%= render "code_submissions/code_sub_form" %>
  		</div>
  		<div class="span6">
  			<h3>Submit to CodeRedux, get reviews.</h3>
  			<p>Improve your code with input from other professionals. CodeRedux helps you get quality reviews from experts in the language.</p>   
  			<p>Make it better, faster, and leaner.</p>
  		</div>
  	</div>
</div>
<div class="row-fluid">
<div class="span12">
	<div class="span6">
		<table width="100%" class="table border-free-table" >

		  <% @code_submissions.each do |submission| %>
		  	<tr>
		  		<td><h3><%= link_to submission.title, code_submission_path(submission) %></h3></td>
		  		<td><%= link_to 'Review This Code', code_submission_path(submission), class: "btn btn-danger btn-small" %></td>
		  	</tr>
		  	<tr>
		  		<td colspan="2"><%= submission.description %></td>
		  	</tr>
		    <tr>
		      	<td><i class="icon-user"></i>
		      		<%= link_to submission.user.name, user_path(:id => submission.user.id) %>&nbsp;&nbsp;
		      		<i class="icon-calendar"></i>
					<%= submission.created_at.strftime("%b %e, %Y") %>&nbsp;&nbsp;
					<span class="label label-info"><%= "#{pluralize(submission.reviews.count, 'review')}" %></span></td>

		    </tr>
		  <% end %>

		</table>
		<div><%= paginate @code_submissions %></div>

	</div>
	<div class="span6">

		<%= render "code_submissions/random_code" %>
		<p><%= link_to 'Review This Code', code_submission_path(@random_code.id), class: "btn btn-success btn-large" %></p>
	</div>
</div>

</div>