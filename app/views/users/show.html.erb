<div class="row-fluid">
  <div class="span12">
    <div class="span8">
      <h1>Review Feed</h1>

      <table width="100%" class="table border-free-table">
        <% @reviews.reverse.each do |review| %>
          <tr>
            <td><%= link_to review.body, code_submission_path(review.code_submission_id) %></td>
            <td><%= review.created_at.strftime("%b %e, %Y") %></td>
          </tr>
        <% end %>
      </table>
      <div><%= paginate @reviews %></div>
    </div>
    <div class="span4 well">
      <div><%= image_tag avatar_url(@user) %></div>
      <h1><%= @user.name %></h1>

    </div>
  </div>
</div>

<hr />
     <h1>Submitted Code</h1><br />
      <table width="100%" class="table border-free-table">
        <% @user.code_submissions.each do |code| %>
          <tr>
            <td><%= link_to code.title, code_submission_path(code) %></td>
            <td><span class="label label-info"><%= "#{pluralize(code.reviews.count, 'review')}" %></span></td>
          </tr>
        <% end %>
      </table>

<% if signed_in? && current_user == @user %>
  
<% end %>